terraform {
  required_version = ">= 0.12"
}

# ---------------------------------------------------------------------------------------------------------------------
# CREATE A GOOGLE STORAGE BUCKET
# ---------------------------------------------------------------------------------------------------------------------

resource "google_storage_bucket" "example_bucket" {
  project  = var.gcp_project_id
  name     = var.bucket_name
  location = var.bucket_location
}

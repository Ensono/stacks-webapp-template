{
  "name": "amido-stacks",
  "version": "1.0.0",
  "description": "Stacks web application template monorepo made with server side rendered React and node.js",
  "main": "",
  "repository": "https://github.com/amido/stacks-webapp-template.git",
  "author": "https://amido.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "postinstall": "lerna bootstrap",
    "release": "lerna version && lerna publish from-git --yes",
    "dev": "lerna run dev --stream",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json)\"",
    "validate": "yarn prettier --list-different && yarn lint"
  },
  "engines": {
    "node": ">=12.0"
  },
  "engineStrict": true,
  "devDependencies": {
    "@typescript-eslint/parser": "^2.15.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}

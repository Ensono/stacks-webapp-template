{
  "testMatch": ["**/*.test.pact.(ts)"],
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js", "json"],
  "setupFiles": ["<rootDir>/utils/pactSetup.ts"],
  "setupFilesAfterEnv": ["<rootDir>/utils/pactTestWrapper.js"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputName": "pact-junit-test-report.xml"
      }
    ]
  ]
}

{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["jest", "node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "resolveJsonModule": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src/jest.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.bootstrap-config.json"
  ]
}

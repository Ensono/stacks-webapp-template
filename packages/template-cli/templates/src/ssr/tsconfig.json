{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "types": ["jest", "node", "cypress"],
    "keyofStringsOnly": true
  },
  "exclude": ["node_modules", "coverage", "**/*.test.(ts|tsx)", "**/*.cy.ts"],
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}

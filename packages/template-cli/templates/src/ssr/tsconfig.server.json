{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "types": ["node"],
    "noEmit": false,
  },
  "exclude": [
    "node_modules",
    "coverage",
    "**/*.test.(ts|tsx)",
    "**/*.cy.ts",
    "pact",
    "**/*.js"
  ],
  "include": ["server/**/*.ts"]
}

{
  "src": "__tests__/testcafe/**/*.test.cf.ts",
  "tsConfigPath": "__tests__/testcafe/tsconfig.testcafe.json",
  "browsers": ["chrome:headless", "firefox:headless"],
  "reporter": {
    "name": "xunit",
    "output": "testcafe-junit-test-report.xml"
  },
  "screenshots": {
    "path": "__tests__/testcafe/screenshots/",
    "fullPage": true,
    "pathPattern": "${DATE}_${TIME}/test-${TEST_INDEX}/${USERAGENT}/${FILE_INDEX}.png"
  }
}

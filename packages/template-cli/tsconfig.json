{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "module": "commonjs",
    "types": ["jest"],
    "inlineSourceMap": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "**/__mocks__/**/*",
    "templates/**/*",
    "**/*.test.ts",
    "coverage/**/*"
  ],
  "include": ["src/jest.config.js", "**/*.ts", "**/*.tsx"]
}

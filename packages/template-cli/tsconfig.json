{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "resolveJsonModule": true,
    "module": "commonjs",
    // "types": [],
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "**/__mocks__/**/*",
    "templates/**/*",
    "**/*.test.ts",
    "coverage/**/*",
    "test-app-1"
  ],
  "include": [
    "src/jest.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.bootstrap-config.json"
  ]
}
